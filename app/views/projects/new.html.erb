<div class="page-header">
  <h1>Create Project</h1>
</div>

<%= form_for(@project, html: {class: "form-horizontal"}) do |f| %>
<% if @project.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <h2><%= pluralize(@project.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @project.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>

<% end %>

<div class="form-group">
  <%= f.label :name, class: "col-sm-1" %>
  <div class="col-sm-5">
    <%= f.text_field :name, class:"form-control" %>
  </div>
</div>

<div class="actions" >
  <%= f.submit :class => "btn btn-primary col-sm-offset-1"%>
  <%= link_to 'Cancel', projects_path, :class => "btn btn-default" %>
</div>

<% end %>
