<div class="jumbotron">
  <h1>gCamp</h1>
  <h1><small>Your life, organized.</small></h1>
</div>

<div class="row">
  <div class="col-md-4"><%= image_tag "frog.jpg", width: "100%" , class:"img-responsive", alt:"Responsive image"%></div>
  <div class="col-md-4"><%= image_tag "frog_2.jpg", class:"img-responsive", alt:"Responsive image"%></div>
  <div class="col-md-4"><%= image_tag "frog_3.jpg", class:"img-responsive", alt:"Responsive image"%></div>
</div>

  <div  class="row">
    <div style="margin-top: 20px" class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body">
            Grouped by projects and lists.  Just the way you like'em
        </div>
      </div>
    </div>

    <div style="margin-top: 20px" class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Upload</li>
            <li>Comment</li>
            <li>Revise</li>
          </ul>
        </div>
      </div>
    </div>

    <div style="margin-top: 20px" class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Comments</h3>
        </div>
        <div class="panel-body">
            <ul>
              <li>Comment on tasks and documents</li>
              <li>Get email notifications</li>
            </ul>
        </div>
      </div>
    </div>
  </div>

  <div>
    <% @quotes_array.each_with_index do |quote,index| %>
    <ul>
        <%= quote %>
    </ul>
    <ul>
      <font color="grey"><i> <%= "-#{@quote_authors[index]}" %> </i></font>
    </ul>
    <% end %>
  </div>
