<div class="jumbotron">
  <h1>gCamp</h1>
  <p>Your life, organized.</p>
</div>

  <div  class="row col-sm-height">
    <div  class="col-md-4">
      <div> <%= image_tag "pic2-1.jpg", class:"img-responsive", alt:"Responsive image"%> </div>
      <div style="margin-top: 20px" class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body" style="height: 200px">
            Grouped by projects and lists.  Just the way you like'em
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div> <%= image_tag "pic2-2.jpg", class:"img-responsive", alt:"Responsive image"%> </div>
      <div style="margin-top: 20px" class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body" style="height: 200px">
          <ul>
            <li>Upload</li>
            <li>Comment</li>
            <li>Revise</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div> <%= image_tag "pic2-3.jpg", class:"img-responsive", alt:"Responsive image"%> </div>
      <div style="margin-top: 20px" class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Comments</h3>
        </div>
        <div class="panel-body" style="height: 200px">
            <ul>
              <li>Comment on tasks and documents</li>
              <li>Get email notifications</li>
            </ul>
        </div>
      </div>
    </div>
  </div>


  <div>
    <% @quotes_array.each do |quote| %>
        <%= quote[0] %>
      <p><font color="grey"><i> <%= "- #{quote[1]}" %> </i></font></p>
    <% end %>
  </div>
