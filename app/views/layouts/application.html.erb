<!DOCTYPE html>
<html>

<% if notice %>
<center id="notice" class="alert alert-success" role="alert"> <font color="green"> <%= notice %> </font></center>
<% end %>

  <div>
    <head>
      <title>GCamp</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
    </head>


    <body data-no-turbolink class="container">
      <nav class="navbar navbar-inverse navbar-fixed-top">
          <div class="container">
          <div class="navbar-header">
            <%= link_to "gCamp", root_path, class: "navbar-brand" %>
          </div>
            <ul class="navbar-right">
              <% if current_user %>
                <%= link_to current_user.full_name, user_path(current_user[:id]) %>
                |
                <%= link_to "Sign Out", signout_path %>
              <% else %>
                <%= link_to "Sign Up", registrations_path %>
                |
                <%= link_to "Sign In", signin_path %>
              <% end %>
            </ul>
          </div>
      </nav>



    <div>
      <%= yield %>
    </div>

    <div>
      <footer class="navbar navbar-fixed-bottom container">
      <hr>
        <%= link_to "About", about_path %> |
        <%= link_to "Terms", terms_path %> |
        <%= link_to "FAQ", faq_path %> |
        <%= link_to "Users", users_path %> |
        <%= link_to "Projects", projects_path %>
      </footer>
    </div>

  </body>


  </div>
</html>
