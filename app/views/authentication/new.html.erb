<div class="well col-md-4 col-md-offset-4">

<h1>Sign in to gCamp!</h1>

<%= form_tag signin_path do |f| %>

<% if @sign_in_error %>
<p>
  <font color="red"><%= @sign_in_error %></font>
</p>
<% end %>

<div>
  <%= label_tag :email %>
</div>
<div class>
  <%= email_field_tag :email %>
</div>

<div>
  <%= label_tag :password %>
</div>
<div>
  <%= password_field_tag :password %>
</div>

<div>
  <%= submit_tag "Sign in", class: "btn btn-primary" %>
</div>

<% end %>
</div>
